@using InvestmentSite.MVC1.Models
@model Portfolio
@{
    Layout = "_Layout";
}

<div>
            <h1>Expense Items</h1>
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Amount</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var expenseItem in Model.ExpenseItems)
            {
                <tr>
                    <td>@expenseItem.Id</td>
                    <td>@expenseItem.Amount</td>
                    <td>@expenseItem.ExpenseType!.Type</td>
                </tr>
            }
        </tbody>

    </table>
    <h1>Income Items</h1>
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Amount</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var incomeItem in Model.IncomeItems)
            {
                <tr>
                    <td>@incomeItem.Id</td>
                    <td>@incomeItem.Amount</td>
                    <td>@incomeItem.IncomeType!.Type</td>
                </tr>
            }
        </tbody>

    </table>
</div>
